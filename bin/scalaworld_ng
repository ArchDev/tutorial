#!/usr/bin/env bash
set -e

function assert-installed() {
  binary=$1
  command -v ${binary} >/dev/null 2>&1 || { echo >&2 "Missing dependency ${binary}, exiting."; exit 1; }
}

NAILGUN="ng"
if  ! type "${NAILGUN}" > /dev/null; then
  NAILGUN="ng-nailgun"
fi

assert-installed $NAILGUN
assert-installed scalaworld_ng_server

startNailgun() {
  echo "Starting nailgun..."
  scalaworld_ng_server &
  sleep 1
  $NAILGUN ng-alias scalaworld scalaworld.cli.Cli
}


if [ "$1" = "restart" ]; then
  $NAILGUN ng-stop || true
  sleep 1
  startNailgun
else
  $NAILGUN ng-stats &> /dev/null || startNailgun
  $NAILGUN scalaworld "$@"
fi